<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/selectLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="selectLocation"
            android:textSize="20sp"/>
        <Spinner
            android:id="@+id/allLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/selectLocation"
            android:layout_alignBottom ="@id/selectLocation" />

        <TextView
            android:id="@+id/loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectLocation"
            android:layout_alignLeft="@id/selectLocation"
            android:layout_alignRight="@id/selectLocation"
            android:text="loc"
            android:textSize="30sp"/>

        <EditText
            android:id="@+id/Enterloc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/loc"
            android:layout_alignBottom ="@id/loc"
            android:hint="enter the loc near"
            android:singleLine="true"/>


        <TextView
            android:id="@+id/dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loc"
            android:layout_alignLeft="@id/selectLocation"
            android:layout_alignRight="@id/selectLocation"
            android:text="dis"
            android:textSize="30sp"/>

        <EditText
            android:id="@+id/Enterdis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dis"
            android:layout_alignBottom ="@id/dis"
            android:hint="@string/enterdis"
            android:singleLine="true"/>

        <Button
            android:id="@+id/Addanother"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dis"
            android:layout_alignRight="@id/selectLocation"
            android:layout_alignLeft="@id/selectLocation"
            android:text="@string/addanother"/>
    </RelativeLayout>
</LinearLayout>